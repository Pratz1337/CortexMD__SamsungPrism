[Unit]
Description=CortexMD Backend API Server
After=network.target

[Service]
Type=simple
User=YOUR_GCP_USERNAME
WorkingDirectory=/home/YOUR_GCP_USERNAME/CortexMD/backend
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/home/YOUR_GCP_USERNAME/CortexMD/backend/.env
ExecStart=/usr/bin/python3 /home/YOUR_GCP_USERNAME/CortexMD/backend/run_https_server.py
Restart=always
RestartSec=10
StandardOutput=append:/home/YOUR_GCP_USERNAME/CortexMD/backend/logs/cortexmd.log
StandardError=append:/home/YOUR_GCP_USERNAME/CortexMD/backend/logs/cortexmd-error.log

[Install]
WantedBy=multi-user.target
